{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext", "ES2015.Core"],
    "noEmit": true,
  },
  "include": ["**/*", ".eslintrc.cjs"],
  "exclude": ["node_modules",]
}
