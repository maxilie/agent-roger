{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext", "ES2015.Core"],
    "baseUrl": "./",
    "target": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
  },
  "include": ["**/*", ".eslintrc.cjs"],
  "exclude": ["./build", "renameToCjs.cjs"]
}
