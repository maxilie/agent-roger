{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext", "ES2015.Core"],
    "baseUrl": "./",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  },
  "include": ["/**/*", ".eslintrc.cjs", "./src/**/*.ts", "test/**/*.ts", "/**/*.ts"],
  "exclude": ["./build", "renameToCjs.cjs", "node_modules"]
}
