{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["**/*", ".eslintrc.cjs"],
  "exclude": ["./build", "renameToCjs.cjs"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
